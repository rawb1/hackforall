    "core-js": "^3.6.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-log4": "^2.3.2",
    "koa-passport": "^4.1.3",
    "koa-router": "^7.4.0",
    "koa-session": "^5.12.3",
    "koa-static": "^5.0.0",
    "log4js": "^6.1.0",
