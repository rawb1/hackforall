{
  "name": "hackforall",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "watch": "docker start mongo minio && nodemon --inspect --ignore src/ ./srv/server.js",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix && eslint ./srv --fix",
    "setup:mongo": "docker run -d -p 27017:27017 --name mongo mongo:latest",
    "setup:minio": "docker run -d -p 9000:9000 -e 'MINIO_ACCESS_KEY=hackforall' -e 'MINIO_SECRET_KEY=hackforall' --name minio minio/minio:latest server /data",
    "setup": "cp .env.example .env && npm run setup:mongo && npm run setup:minio"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-server-koa": "^2.18.1",
    "apollo-upload-client": "^14.1.1",
    "bcrypt": "^5.0.0",
    "buefy": "^0.9.3",
    "bulma": "^0.9.0",
    "bulma-helpers": "^0.3.12",
    "bulma-timeline": "^3.0.4",
    "core-js": "^3.6.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-constraint-directive": "^2.1.0",
    "graphql-date": "^1.0.3",
    "graphql-tag": "^2.11.0",
    "graphql-upload": "8.1.0",
    "jose": "^2.0.2",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-log4": "^2.3.2",
    "koa-router": "^9.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.20",
    "log4js": "^6.3.0",
    "minio": "^7.0.16",
    "mongoose": "^5.10.3",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.4.11",
    "normalize.css": "^8.0.1",
    "omit-deep-lodash": "^1.1.5",
    "vee-validate": "^2.2.15",
    "vue": "^2.6.12",
    "vue-apollo": "^3.0.4",
    "vue-gravatar": "^1.3.1",
    "vue-resource": "^1.5.1",
    "vue-router": "^3.4.3",
    "vuejs-logger": "1.5.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.4",
    "@vue/cli-plugin-eslint": "^4.5.4",
    "@vue/cli-service": "^4.5.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-koa": "^2.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "fibers": "^5.0.0",
    "lint-staged": "^10.3.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "prettier": "^1.19.1",
    "sass-loader": "^10.0.2",
    "vue-template-compiler": "^2.6.12"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
